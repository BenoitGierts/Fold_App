<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.foldapp.hcattiaux.foldapp.TabbedActivity$PlaceholderFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        style="@android:style/Widget.Material.ScrollView"
        android:scrollbarStyle="insideOverlay"
        android:id="@+id/scrollView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:text="Propriétaire"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/proprietaire"
                android:textAppearance="@android:style/TextAppearance.Material.Title" />

            <TextView
                android:text="Nom : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/propNom" />

            <TextView
                android:text="Prénom : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/propPrenom" />

            <TextView
                android:text="Téléphone : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/propTel" />

            <TextView
                android:text="Email : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/propEmail" />

            <TextView
                android:text="Logement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/logement"
                android:textAppearance="@android:style/TextAppearance.Material.Title"
                android:layout_marginTop="10dp" />

            <TextView
                android:text="Nombre de pièces : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nbChambre" />

            <TextView
                android:text="Nombre de chambres : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nbChambre" />

            <TextView
                android:text="Surface (m²) : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/surface" />

            <TextView
                android:text="Prix : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Prix" />

            <TextView
                android:text="Nombre d'étages : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nbEtage" />

            <TextView
                android:text="Numéro d'étage : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/numEtage" />

            <TextView
                android:text="Ascenseur : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ascenseur" />

            <TextView
                android:text="Rénover : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/renover" />

            <TextView
                android:text="Type de chauffage : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/typeChauffage" />

            <TextView
                android:text="Location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Location"
                android:textAppearance="@android:style/TextAppearance.Material.Title"
                android:layout_marginTop="10dp" />

            <TextView
                android:text="Ville :"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ville" />

            <TextView
                android:text="Adresse : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/adresse" />

            <TextView
                android:text="Commodite : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Commodite"
                android:textAppearance="@android:style/TextAppearance.Material.Title"
                android:layout_marginTop="10dp" />

            <TextView
                android:text="com01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/com01" />

            <TextView
                android:text="com02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/com02" />

            <TextView
                android:text="com03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/com03" />

            <TextView
                android:text="com04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/com04" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
