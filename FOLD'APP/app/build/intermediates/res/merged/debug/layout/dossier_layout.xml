<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <LinearLayout
        android:id="@+id/infoSection"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="-10dp"
        android:layout_height="190dp"
        android:background="?android:attr/colorBackground">

        <ImageView
            android:id="@+id/imageLogement"
            android:layout_width="match_parent"
            android:contentDescription="Dossier Image"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/titreDossier"
            android:layout_alignStart="@+id/titreDossier"
            android:maxHeight="160dp"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:background="?android:attr/colorBackground"
            android:backgroundTint="?android:attr/colorBackground" />

        <TextView
            android:id="@+id/titreDossier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Titre"
            android:textSize="18sp"
            android:layout_above="@+id/description"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:backgroundTint="?android:attr/colorBackground"
            android:background="?android:attr/colorBackground"
            android:layout_marginTop="-50dp"
            android:paddingLeft="35dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:text="Description"
            android:textSize="13sp"
            android:layout_below="@+id/imageLogement"
            android:backgroundTint="?android:attr/colorBackground"
            android:background="?android:attr/colorBackground"
            android:paddingLeft="10dp"
            android:layout_marginBottom="-40dp"
            android:textStyle="bold|italic"/>
    </LinearLayout>

</RelativeLayout>
